{
  "manifest_version": 3,
  "name": "Scholar Notes",
  "version": "0.1",
  "description": "Add personal notes to academic papers while browsing Google Scholar.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://scholar.google.com/*",
	"https://scholar.google.com.tr/*",
    "https://scholar.google.co.uk/*",
    "https://scholar.google.de/*",
    "https://scholar.google.fr/*",
    "https://scholar.google.es/*",
    "https://scholar.google.it/*",
    "https://scholar.google.ca/*",
    "https://scholar.google.com.au/*",
    "https://scholar.google.nl/*",
    "https://scholar.google.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://scholar.google.com/*",
		"https://scholar.google.com.tr/*",
        "https://scholar.google.co.uk/*",
        "https://scholar.google.de/*",
        "https://scholar.google.fr/*",
        "https://scholar.google.es/*",
        "https://scholar.google.it/*",
        "https://scholar.google.ca/*",
        "https://scholar.google.com.au/*",
        "https://scholar.google.nl/*",
        "https://scholar.google.jp/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
}

}
